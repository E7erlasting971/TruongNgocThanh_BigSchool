@model IEnumerable<TruongNgocThanh_BigSchool.Models.Course>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.Datetime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.Datetime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @*@course.Name*@
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                    <span>
                        <button data-course-id="@course.Id" class="btn btn-default btn-sm js-tongle-attendance">Going?</button>
                    </span>
                </div>
            </li>
        }
        @*@foreach (var course in Model)
            {
                <li>
                    @course.Datetime.ToString("dd/MM/yyyy HH:mm") - @course.Name
                </li>
            }*@
    </ul>
    @section scripts{
        <script>
            $(document).ready(function () {
                $(".js-tongle-attendance").click(function (e) {
                    var button = $(e.target);
                    $.post("/api/attendances", {
                        Id: button.attr("data-course-id")})
                            .done(function () {
                                alert("Register course successfully")
                                button
                                    .removeClass("btn-default")
                                    .addClass("btn-info")
                                    .text("Going");
                            }).fail(function () {
                                alert("Something fail");

                            });
                    });
                });
        </script>
    }
</div>

